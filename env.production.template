# Meta/Facebook API Configuration
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_meta_access_token
META_AD_ACCOUNT_ID=act_your_ad_account_id

# OpenAI Configuration (for LLM analysis)
OPENAI_API_KEY=your_openai_api_key

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
ALLOWED_ORIGINS=https://meta.tryfleur.com,https://www.meta.tryfleur.com

# Database Configuration
DB_HOST=meta-analytics-db
DB_PORT=5432
DB_NAME=meta_analytics
DB_USER=meta_analytics_user
DB_PASSWORD=your_secure_db_password

# Redis Configuration
REDIS_HOST=meta-analytics-redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/meta.tryfleur.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/meta.tryfleur.com/privkey.pem

